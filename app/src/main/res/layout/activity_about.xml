<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".AboutActivity"
    >


    <ImageView
            android:layout_width="@dimen/bmi_wid_image"
            android:layout_height="@dimen/bmi_height_image" app:srcCompat="@drawable/krowa" android:id="@+id/cow"
            android:layout_gravity="center"/>
    <TextView
            android:text="@string/bmi_about_txtWitaj"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bmi_hight_aboutelem" android:id="@+id/aboutmetxt" android:textAlignment="center"
            android:textSize="@dimen/bmi_txtSize_txt" android:layout_weight="5"/>
    <Button
            android:text="@string/bmi_about_pokazWiecejbut"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bmi_hight_aboutelem" android:id="@+id/wiecej" android:textAlignment="center"
            android:layout_gravity="center"
            android:onClick="wyswietlWiecej" android:background="@color/claret" android:textColor="@color/gamboge"
            android:layout_weight="1"/>
    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="@dimen/bmi_hight_aboutelem" android:id="@+id/aboutmetxtplus" android:textAlignment="center"
            android:textSize="@dimen/bmi_txtSize_txt" android:layout_weight="12"/>
</LinearLayout>
